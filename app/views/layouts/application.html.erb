<!DOCTYPE html>
<html>
  <head>
    <title>Proyecteichon</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </head>

  <body class="homepage">
    <div id="page-wrapper">
      <div id="header">
        <div class="container">
          <%= render 'shared/navbar' %>
        </div>
      </div>

      <!-- Alerts -->
      <% if notice.present? %>
        <p class="notice alerts"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alerts"><%= alert %></p>
      <% end %>

      <% if  controller.controller_name == 'products' and controller.action_name == 'index' %>
        <!-- Banner -->
        <div id="banner">
          <div class="container">
            <section>
              <a class="image full"><%= image_tag 'banner.jpg' %></a>
            </section>
          </div>
        </div>

        <!-- Featured -->
        <div id="featured">
          <section class="container">
            <header>
              <h2>Tu tienda en LÃ­nea</h2>
              <span class="byline">Consigue lo que buscas</span>
            </header>
          </section>
        </div>

      <% end %>

      <div id="main">
        <section class="container">
          <%= yield %>
        </section>
      </div>
      <div id="footer">
        <div class="container">
          <%= render 'shared/footer' %>
        </div>
      </div>
    </div>
  </body>
</html>
