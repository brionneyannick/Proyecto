<div id="main">
  <section class="container">
    <div class="row">
      <% @products.each do |product| %>
          <section class="4u 12u(mobile)">
            <a href="#" class="image full"><%= image_tag 'pic01.jpg' %></a>
            <div class="box">
              <h3><%= link_to product.name, product_path(product.id) %></h3>
              <h5><a href="#">$<%= product.price %></a></h5>
            </div>
            <%= link_to 'Inactivar', new_product_path %> |
            <%= link_to 'Eliminar', product_path(product), method: :delete %>
          </section>
      <% end %>
      <%= link_to 'Nuevo Producto', new_product_path %>
    </div>
  </section>
</div>
